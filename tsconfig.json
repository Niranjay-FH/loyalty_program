{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "6.0",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
  },
  "include": ["src/**/*", "server.ts", "src/__tests__/setup.ts"],
  "exclude": ["node_modules"]
}